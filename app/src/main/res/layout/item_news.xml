<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:layout_marginTop="30dp"
    android:elevation="20dp"
    card_view:cardBackgroundColor="@color/cararra"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">

        <FrameLayout
            android:id="@+id/frameLayout_1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:layout_alignParentTop="true"
            android:background="@color/primary_dark_new">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/frameLayout_1"
            android:background="@color/primary_new">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="News Heaeding"
                android:maxLength="30"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </FrameLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fav_black"
            android:layout_alignParentEnd="true"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_below="@+id/frameLayout_2"
            android:src="@drawable/img_bg"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/publisherValueTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="publisher name"
                android:maxLength="30"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/timstampTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="21:00"
            android:maxLength="30"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>