<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:layout_marginTop="30dp"
    android:elevation="20dp"
    card_view:cardBackgroundColor="@color/cararra"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frameLayout_2"
            android:scaleType="centerCrop"
            android:background="@drawable/img_bg"
            android:alpha=".8"/>

        <ImageView
            android:id="@+id/favIV"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="-6.5dp"
            android:src="@drawable/ic_fav_2" />

        <TextView
            android:id="@+id/newsHeadlineTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/favIV"
            android:layout_marginRight="10dp"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:text="News Heading"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tapTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to read full article"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha=".5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/publisherTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:maxLength="30"
                android:text="publisher name"
                android:textColor="@color/gray"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/timstampTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            android:text="21:00"
            android:textColor="@color/gray"
            android:textSize="14dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>